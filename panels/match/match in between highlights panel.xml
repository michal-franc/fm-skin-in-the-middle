<panel>
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" />
	<!-- these are defaults tablet sizes-->
	<integer id="TbWs" value="300"/>
	<integer id="TbWm" value="650"/>
	<integer id="TbWl" value="1550"/>

	<list id="properties_to_forward">
		<record get_property="HNEp" target="NEvp" set_property="hidn" />
		<record get_property="HFep" target="FEEP" set_property="hidn" />
		<record get_property="HTtp" target="TTab" set_property="hidn" />
		<record get_property="OTfi" target="TTab" set_property="OTfi" />
		<record get_property="HTsi" target="TTab" set_property="HTsi" />
		<record get_property="OTsi" target="TTab" set_property="OTsi" />
	</list>
 
	<container>
		<attachment_group class="horizontal_arrange" horizontal_alignment="right,extend" horizontal_offset="0" vertical_inset="0" horizontal_gap="8" />
		
		<container>
 
			<attachment_group class="horizontal_arrange" horizontal_alignment="left,extend" horizontal_gap="8"/>
 
			<container width="360">
				<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
				
				<container id="NEvp">
					<attachment_group class="vertical_arrange" vertical_alignment="bottom,extend" />
 
					<container class="main_transparent_box" appearance="boxes/custom/match/timeline stats/paper" red_replacement="bg">
					<layout class="vertical_arrange" vertical_layout="-8,-8" />
						<animation class="scale_animation" start_value="1, 0" end_value="1, 1" duration="0.3" delay="1.4" end_mode="hold_end" tween="ease_out" coord_mode="relative_to_target" centre_point="top" />
						<animation class="scale_animation" start_value="1, 0" end_value="1, 1" duration="0.3" delay="0.2" end_mode="hold_end" tween="ease_out" coord_mode="relative_to_target" centre_point="top" trigger_id="hidden" trigger_value="false" />
 
						<widget class="match_notable_events_panel">
							<animation class="fade_animation" start_value="0" end_value="1" duration="0.5" delay="1.6" end_mode="hold_end" />
							<animation class="fade_animation" start_value="0" end_value="1" duration="0.5" delay="0.4" end_mode="hold_end" trigger_id="hidden" trigger_start="false" trigger_end="true" />						
							<record id="object_property">
								<integer id="get_property" value="objt" />
								<integer id="set_property" value="objt" />
							</record>
						</widget>
						
						
 
				<container class="client_object_viewer_xml_panel" id="qqqq" file="match/match touchline tablet slot container" priority="1" default_height="-1" dit1="prmC">
					<record id="object_property">
						<integer id="get_property" value="objt" />
						<integer id="set_property" value="objt" />
					</record>
				</container> 
					</container>
 
					<widget class="spacer" height="47" />
				</container>
 
			</container>

			<container>
				<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

				<container id="FEEP">
					<attachment_group class="vertical_arrange" vertical_alignment="middle,extend" vertical_offset="0" vertical_gap="0" />
					
					<container>
						<attachment class="test_screen_size_attachment" skip_if_false="true">
							<list id="properties">
								<record>
									<flags id="alignment" value="vertical" />
									<integer id="min_value" value="0" />
									<integer id="max_value" value="720" />
									<symbol id="set_property" value="height" />
									<integer id="true_value" value="8" />
									<integer id="false_value" value="8" />
								</record>
								<record>
									<flags id="alignment" value="vertical" />
									<integer id="min_value" value="720" />
									<integer id="max_value" value="900" />
									<symbol id="set_property" value="height" />
									<integer id="true_value" value="10" />
									<integer id="false_value" value="10" />
								</record>
								<record>
									<flags id="alignment" value="vertical" />
									<integer id="min_value" value="900" />
									<integer id="max_value" value="10000" />
									<symbol id="set_property" value="height" />
									<integer id="true_value" value="20" />
									<integer id="false_value" value="20" />
								</record>
							</list>
						</attachment>
					</container>

					
					<container height="52" />
				</container>
				
			</container>
 
			
 
		</container>
 
		<!--match information-->
		<container>
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
			
			<attachment class="test_screen_size_attachment" skip_if_false="true">
				<list id="properties">
					<record>
						<flags id="alignment" value="horizontal" />
						<integer id="min_value" value="0" />
						<integer id="max_value" value="1366" />
						<symbol id="set_property" value="width" />
						<integer id="true_value" value="335" />
						<integer id="false_value" value="335" />
					</record>
					<record>
						<flags id="alignment" value="horizontal" />
						<integer id="min_value" value="1366" />
						<integer id="max_value" value="1920" />
						<symbol id="set_property" value="width" />
						<integer id="true_value" value="680" />
						<integer id="false_value" value="680" />
					</record>
					<record>
						<flags id="alignment" value="horizontal" />
						<integer id="min_value" value="1920" />
						<integer id="max_value" value="10000" />
						<symbol id="set_property" value="width" />
						<integer id="true_value" value="1550" />
						<integer id="false_value" value="1550" />
					</record>
				</list>
			</attachment>
	
 
			<container class="client_object_viewer_xml_panel" file="match/match touchline tablet panel" id="TTab" >
 
				<record id="object_property">
					<integer id="get_property" value="objt" />
					<integer id="set_property" value="objt" />
				</record>
 
			</container>
		</container>
 
 
	</container>
 
</panel>