<panel height="30">
  <layout class="arrange_horizontal_attachment" alignment="left,extend" offset="0" gap="0"/>
  <layout class="fit_children_attachment" alignment="horizontal,fill" offset="0" gap="0"/>
  <layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />

  <container class="main_box" id="numc" appearance="boxes/custom/attributes/paper" width="40" >
    <layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

 <widget class="label" id="bsnm" size="11" colour="red" font="tad" alignment="centre"  />
    
  </container>

  <container class="main_box"  appearance="boxes/main/contrast/right/paper" width="140" id="nmcn">
    <layout class="arrange_horizontal_attachment" alignment="left" offset="4" gap="4"/>
    <layout class="fit_children_attachment" alignment="horizontal" offset="4" gap="4"/>
    <layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />
      
    <widget  class="text" id="name" format="[%person#1-initial_surname]" size="9" alignment="left,centre_y,can_scale" multiline="false"  auto_size="horizontal"/>
  </container>

</panel>
