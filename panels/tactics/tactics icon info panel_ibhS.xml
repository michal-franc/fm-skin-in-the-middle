<panel>

	<flags id="selected_appearance" value=""/>
	<flags id="appearance" value=""/>
	<boolean id="should_force_refresh" value="true"/>

	<attachment_group class="vertical_arrange" vertical_alignment="bottom,extend" vertical_offset="0" vertical_gap="-2" horizontal_inset="0"/>

	<container>

	<!--kit-->
		<widget class="tactics_kit_picture" id="kitp" keep_aspect_ratio="true" alignment="centre" scale_picture="true">
		  <layout class="stick_to_sides_attachment" alignment="all" inset="4,0,0,0"/>
		</widget>

	<!--injury/red/yellow card-->
		<widget class="plain_box" id="inji" icon_alignment="right,top" width="16" height="16">
		  <layout class="stick_to_sides_attachment" alignment="right" inset="2"/>
		  <layout class="stick_to_sides_attachment" alignment="top" inset="2"/>
		</widget>

	<!--captain icon-->
		<widget class="picture" id="capi" file="icons/16px/captain" scale_picture="true" width="12" height="12">
		  <layout class="stick_to_sides_attachment" alignment="right" inset="3"/>
		  <layout class="stick_to_sides_attachment" alignment="bottom" inset="3"/>
		</widget>

	</container>

	<!--name-->
	<container class="inner_subtle_box_no_margin" height="18">
	  <layout class="stick_to_sides_attachment" alignment="all" inset="1,0,0,0" apply_to_children="true"/>

		<widget class="text" id="name" alignment="centre,can_scale" auto_size="" multiline="false" font="semibold" size="8"/>
	</container>


</panel>
