<panel>
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" offset="0" apply_to_children="true" />
	<container>
		<layout class="arrange_vertical_attachment" alignment="top, extend" offset="0" gap="4" />
		<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" offset="0" apply_to_children="true" />
		<widget class="text" auto_size="vertical" font="title">
			<translation id="text" translation_id="257322" type="use" value="Games Played In Position" />
		</widget>
	<!-- games played in position table -->
	<widget class="table" id="gpip" mode="fill_rows, stripe_rows" layout="-1,-1,-1,-1,-1" auto_size="vertical" auto_size_rows="true" fixed_size_rows="false">
		<list id="default_sort_column">
			<integer value="club" />
			<integer value="posi" />
		</list>

		<list id="headings">
			<record alignment="left,centre_y">
				<translation id="text" translation_id="242883" type="use" value="Pos" />
			</record>
			<record alignment="centre">
				<translation id="hint" translation_id="257323" type="use" value="Games played in this position for his club" />
				<translation id="text" translation_id="227737" type="use" value="Club" />
			</record>
			<record alignment="centre">
				<translation id="hint" translation_id="516212" type="use" value="Goals scored in matches for his club team[COMMENT: AREA: player development; SUB-AREA: stats per position; FR-BN: 30281; TONE: Formal/Informal; CHARLIMIT: None; REF-ID: XXXXXX; NOTE: any other information the translator can make use of]" />
				<translation id="text" translation_id="252894" type="use" value="Goals[COMMENT: team stat overall goals scored, short title]" />
			</record>
			<record alignment="centre">
				<translation id="hint" translation_id="516213" type="use" value="Assists in matches for his club team[COMMENT: AREA: player development; SUB-AREA: stats per position; FR-BN: 30281; TONE: Formal/Informal; CHARLIMIT: None; REF-ID: XXXXXX; NOTE: any other information the translator can make use of]" />
				<translation id="text" translation_id="249414" type="use" value="Assists[COMMENT: player stat: assists table label]" />
			</record>
			<record alignment="centre">
				<translation id="hint" translation_id="342768" type="use" value="Average rating in matches for his club team[COMMENT: Player's average rating across games played for his club]" />
				<translation id="text" translation_id="227852" type="use" value="Av Rat[comment - Average rating]" />
			</record>

		</list>

		<list id="column_widget_properties">
			<record index="0" alignment="left,centre_y" spec="text" />
			<record index="1" alignment="centre, centre_y" />
			<record index="2" alignment="centre, centre_y" />
			<record index="3" alignment="centre, centre_y" />
			<record index="4" alignment="centre, centre_y" />
		</list>

		<list id="column_table_properties">
			<record indx="0" left="4" id="posi" />
			<record indx="1" id="club" sort_ascending="false" />
			<record indx="2" id="cgol" sort_ascending="false" />
			<record indx="3" id="cass" sort_ascending="false" />
			<record indx="4" id="cave" sort_ascending="false" />
		</list>
	</widget>
	</container>
</panel>