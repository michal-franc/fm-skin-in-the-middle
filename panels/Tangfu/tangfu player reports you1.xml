<panel>

  <layout class="arrange_vertical_attachment" alignment="top" offset="0"/>
  <layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0"/>

  <container height="300">
    <layout class="arrange_horizontal_attachment" layout="-1" offset="0"/>
    <layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="0"/>

    <container id="main">
      <layout class="arrange_horizontal_attachment" alignment="top,extend" offset="0" gap="0" />
      <layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />

      <!-- lhs: pros / cons-->
      <container height="100">
        <layout class="arrange_horizontal_attachment" layout="-1" offset="0" gap="1"/>
        <layout class="stick_to_sides_attachment" alignment="top" apply_to_children="true" inset="0"/>

        <!-- pros / cons -->
        <container height="250">
          <layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>
          <layout class="arrange_horizontal_attachment" layout="-1,1, -1" offset="5" gap="1"/>

          <!-- Pros icons -->
          <container class="plain_box" appearance="" height="150">
            <layout class="arrange_vertical_attachment" alignment="left, extend" layout="30,-1" offset="0" gap="3"/>
            <layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0"/>

            <container class="bordered_box" height="25" width="25" red_replacement="pro high">
              <layout class="arrange_horizontal_attachment" alignment="middle" offset="0" gap="0"/>
              <layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="2"/>

              <widget class="label" size="11" style="bold" colour="white" auto_size="all">
                <translation id="text" translation_id="361260" type="use" value="Pros[COMMENT: FR 8316 ]"/>
              </widget>
            </container>

            <container class="scrolling_box">
              <widget class="horizontal_arrange_container" alignment="middle" id="mpro" wrap="true" gap="2" inset="4" auto_size="vertical">
                <integer id="size" value="35" />
              </widget>
            </container>
          </container>

          <widget class="picture" file="dividers/standard/horizontal/line" height="4">
            <layout class="stick_to_sides_attachment" alignment="top" inset="43"/>
          </widget>
          <!-- Cons icons -->
          <container class="plain_box" appearance="" height="150">
            <layout class="arrange_vertical_attachment" alignment="left, extend" layout="30,-1" offset="0" gap="3"/>
            <layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0"/>

            <container class="bordered_box" height="25" width="25" red_replacement="con high">
              <layout class="arrange_horizontal_attachment" alignment="middle" offset="0" gap="0"/>
              <layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="2"/>

              <widget class="label" size="11" style="bold" colour="white" auto_size="all">
                <translation id="text" translation_id="361094" type="use" value="Cons[COMMENT: FR 8316 ]"/>
              </widget>
            </container>

            <!-- Icons get inserted into here. The 'size' attribute is the size in pixels of each icon -->
            <container class="scrolling_box">
              <widget class="horizontal_arrange_container" alignment="middle" id="mcon" wrap="true" gap="2" inset="4" auto_size="vertical">
                <integer id="size" value="35" />
              </widget>
            </container>
          </container>
        </container>


      </container>

    </container>
  </container>
  <!--button to go to reports-->


</panel>