<!-- image properties -->
<properties>

	<!-- image borders -->
	<!-- these determine how many pixels any content is inset from each side of the image -->
	<!-- (for example, in the case of a button, the content would be the text label) -->
	<record id="image_borders" left="8" right="12" top="1" bottom="1"/>

	<!-- image slices determine the points at which the image will be sliced to enable scaling -->
	<!-- the image will only slice in the directions slicing values are provided for-->
	<record id="image_slices" left="5" right="16"/>

	<colour id="red_replacement" name="pitch hide"/>
	<colour id="blue_replacement" name="pitch hide secondary"/>
	
	<record id="primary_icon_properties" red_replacement="pitch hide" />
	<record id="secondary_icon_properties" red_replacement="pitch hide"/>
	
	<record id="font_spec">
		<flags id="font" value="fonts/semibold"/> 
		<colour id="colour" name="pitch hide"/>
	</record>
	
</properties>
