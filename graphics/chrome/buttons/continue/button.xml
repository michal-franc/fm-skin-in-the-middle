<!-- image properties -->
<properties>

	<!-- image borders -->
	<!-- these determine how many pixels any content is inset from each side of the image -->
	<!-- (for example, in the case of a button, the content would be the text label) -->
	<record id="image_borders" left="10" right="5" top="5" bottom="5"/>

	<!-- image slices determine the points at which the image will be sliced to enable scaling -->
	<!-- the image will only slice in the directions slicing values are provided for-->
	<record id="image_slices" left="30" right="5"/>

	<colour id="red_replacement" name="primary_button"/>
	<colour id="green_replacement" name="text"/>
	<colour id="blue_replacement" name="black"/>


	<record id="primary_icon_properties" red_replacement="background" green_replacement="primary_button"/>
	<record id="secondary_icon_properties" red_replacement="background" green_replacement="primary_button"/>

	<symbol id="focus_appearance" value="chrome/buttons/continue/button_controller" />

	
</properties>
